@model IEnumerable<eRenting.Models.Funcionario>

@{
    ViewBag.Title = "Index";
}

<div class="page-header">
    <div class="row align-items-center">
        <div class="col-sm mb-2 mb-sm-0">
            <h1 class="page-header-title">Lista de Funcionários</h1>
        </div>
        <div class="col-sm-auto">
            <a class="btn btn-primary" href="@Url.Action("create", "funcionarios")">
                <i class="tio-user-add mr-1">Adicionar Funcionário</i>
            </a>
        </div>
    </div>
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Contacto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
           Empresa
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Nome)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Contacto)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Email)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Empresa.Nome)
    </td>

    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.Funcionario_id }) |
        @Html.ActionLink("Details", "Details", new { id = item.Funcionario_id }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.Funcionario_id })
    </td>
</tr>
}

</table>
